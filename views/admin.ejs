    <title>Blog</title>
    <style>
        <%= (myCss.style) %>
    </style>
</head>
<body>
    <div class="container ">
      <h1 class='mb-4'>Create Blog</h1>
      <a href="/articles/new" class="btn btn-success mb-4">Add New</a>
      <% articles.forEach(article => { %>
        <div class="col-md-7 card mb-4">
            <h3 class="mt-md-4 px-md-3 mb-2 py-2 bg-white font-weight-bold"><%= article.title %></h3>
            <div class="d-flex mb-3">
                <small class="mr-2 text-muted"><%= article.createdAt.toLocaleDateString() %></small>
            </div>
            <p>
                <%= article.description %>
            </p>
            
            <form action="/articles/<%= article.id %>?_method=DELETE" method="POST">
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>
        </div>
        
    </div>
    <% }) %>
    </div>
    
</body>
</html>